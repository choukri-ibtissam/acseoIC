{% extends "@FOSUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block fos_user_content %}
<br>
<div class="well center-block" style="max-width:400px">
    <div class="jumbotron">
        <div class="row">
            <h1 class="text-center">Connexion</h1>
        </div>
        {% if error %}
            <div class="text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <form action="{{ path("fos_user_security_check") }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon" style="min-width:39px"><i class="fa fa-user" aria-hidden="true"></i></div>
                    <input class="form-control input-lg" type="text" id="username" name="_username" placeholder="Identifiant" required="required" />
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon" style="min-width:39px"><i class="fa fa-key" aria-hidden="true"></i></div>
                    <input class="form-control input-lg" type="password" id="password" name="_password" placeholder="Mot de passe" required="required" />
                </div>
            </div>
            <div>
                <input class="btn btn-default btn-lg btn-block" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
            </div>
            <div class="row">
                <div class="col-md-6 text-left">
                    <div class="checkbox">
                        <label for="remember_me">
                            <input type="checkbox" id="remember_me" name="_remember_me" />
                            {{ 'security.login.remember_me'|trans }}
                        </label>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
{% endblock fos_user_content %}
